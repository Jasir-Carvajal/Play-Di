<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.AddJugadores_act">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo2"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fira_bold"
                        android:text="AGREGAR JUGADORES"
                        android:textAlignment="center"
                        android:textColor="@color/ligth_yellow"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:contentDescription="TODO"
                        app:srcCompat="@drawable/linea2" />

                    <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/btns"
                        android:backgroundTint="@color/grey"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtJugador"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:autofillHints=""
                                android:background="@drawable/btns"
                                android:backgroundTint="@color/white"
                                android:ems="10"
                                android:fontFamily="@font/fira_bold"
                                android:hint="Nombre del jugador"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="10dp"
                                android:textColor="@color/light_grey"
                                android:textColorHint="#78909C"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/btnAgregar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/btns"
                                android:backgroundTint="@color/purple_200"
                                android:fontFamily="@font/fira_bold"
                                android:text="agregar"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp">

                        <ListView
                            android:id="@+id/listJ"
                            android:layout_width="match_parent"
                            android:layout_height="340sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/btnContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <Button
                            android:id="@+id/btnRegresar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btns"
                            android:backgroundTint="#414141"
                            android:fontFamily="@font/fira_bold"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:text="regresar"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btnJugar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btns"
                            android:backgroundTint="@color/purple_200"
                            android:fontFamily="@font/fira_bold"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="3dp"
                            android:text=" iniciar partida"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>